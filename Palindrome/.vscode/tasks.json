{
    // Default Build Task
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++ Build",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-Werror",
                "-std=c++11",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/bin/build",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/g++"
        }
    ]
}